{
  "manifest_version": 2,
  "name": "urPlus",
  "description": "A chrome extension to enhance the Udacity reviewer experience.",
  "version": "1.3.0",
  "author": "Michael Hays",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://review.udacity.com/*"],
      "css": ["review.css"],
      "js": ["review.js"]
    }
  ],
  "permissions": [
    "alarms",
    "cookies",
    "storage",
    "tabs",
    "https://review.udacity.com/",
    "https://urplus2.herokuapp.com/",
    "https://urplus2-staging.herokuapp.com/",
    "https://localhost:8000/",
	"https://localhost/",
	"https://review-api.udacity.com/"
  ]
}
